<h2 class="loginH2"> Please enter your login details </h2>
<%= form_tag '/login' do %>

  <p>
    <%= label_tag 'name' %>
    <%= text_field_tag 'name' %>
  </p>

  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>

  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>
